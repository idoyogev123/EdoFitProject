<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DietProgram">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_margin="7dp"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:id="@+id/CalorieBalance"/>
        <TextView
            android:layout_margin="7dp"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:id="@+id/Calorieintake"/>
        <TextView
            android:layout_margin="7dp"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:id="@+id/DailyProtein"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <TextView
            android:gravity="center"
            android:text="Calorie balance"
            android:layout_margin="7dp"
            android:layout_width="125dp"
            android:layout_height="20dp"/>
        <TextView
            android:gravity="center"
            android:text="Calorie intake"
            android:layout_margin="7dp"
            android:layout_width="125dp"
            android:layout_height="20dp"/>
        <TextView
            android:gravity="center"
            android:text="Daily protein"
            android:layout_margin="7dp"
            android:layout_width="125dp"
            android:layout_height="20dp"/>

    </LinearLayout>
    |<ListView
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LvDiet"></ListView>

</LinearLayout>